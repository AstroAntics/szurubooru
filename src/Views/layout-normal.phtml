			<title><?php echo $this->context->title ?></title>
		<?php endif ?>
		<?php foreach ($this->context->stylesheets as $name): ?>
			<link rel="stylesheet" type="text/css" href="<?php echo \Chibi\UrlHelper::absoluteUrl('/media/css/' . $name) ?>"/>
